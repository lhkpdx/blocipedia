
<h1><%= @wiki.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p class="lead">
       <%= @wiki.body %></p>
    </div>
 </div>
 <br>
   <div class="col-md-4">
     <%= link_to "Back to List", wikis_path, class: 'btn btn-success' %>
     <% unless @wiki.private?%>
        <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
        <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Wiki?' } %>
      <% end %>
   </div>
