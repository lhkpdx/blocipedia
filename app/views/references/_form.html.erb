<%= form_for [@wiki, @reference] do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter the name of your reference here" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="form-group">
    <%= f.label :link_to_resource%>
    <%= f.text_field :link, class: 'form-control', placeholder: "Enter reference link here" %>

    <br><br>
    <%= f.submit "Save", class: 'btn btn-success' %>
    <%= link_to "Back to Wikis", wikis_path, class: "btn btn-info" %></li>
  </div>
<% end %>
